## main part with users manipulation 
#!/bin/bash

DATE_EXPIRE=`date +%F --date='+90 days'`
echo $DATE_EXPIRE
USERS_IN_SALES=`awk 'BEGIN {FS=":"} $4~/4000/ {print $1}' /etc/passwd`
echo $USERS_IN_SALES
for i in $USERS_IN_SALES
do
chage -d 0 $i
usermod -e $DATE_EXPIRE $i
if [ "$i" == "Bob" ]
then
        chage -M 15 $i
else
        chage -M 30 $i
fi
done

